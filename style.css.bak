*{
margin:0px;
padding:0px;
box-sizing:border-box;
background-color:white;
font-family:Palatino Linotype;	
outline:none;
}

.container{
height:600px;
display:flex;
justify-content:center;
align-items:center;	
}

.container .calculator{
background-color:white;
padding:20px;
border-radius:20%;
box-shadow:inset 2px 2px 10px grey;
display:grid;
grid-template-columns:repeat(4,80px);	
}

input{
grid-column:span 4;	
height:80px;
width:320px;
background-color:white;
box-shadow:inset 2px 2px 10px grey;
border:none;
border-radius:25%;
font-size:40px;
text-align:end;
margin:auto;
margin-top:40px;
margin-bottom:30px;
padding:20px;
}

button{
height:50px;
width:50px;
background-color:white;	
box-shadow:inset 2px 2px 10px grey;
border:none;
border-radius:50%;
margin:8px;
font-size:18px;
}

.equal{	
width:120px;
height:50px;
font-size:25px;
}